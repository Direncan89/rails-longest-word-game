<div class="container">
  <div class="letters">
    <% @letters.each do |letter| %>
      <div class="letter">
        <%= letter %>
      </div>
    <% end %>
  </div>
  <form action="<%= score_path %>" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" placeholder="What's your best guess?" name="attempt">
    <input type="submit" value="Play!">
  </form>
</div>
